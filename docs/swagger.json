    "dto.RefreshToken": {
      "type": "object",
      "required": [
        "token"
      ],
      "properties": {
        "token": {
          "type": "string"
        }
      }
    },
    "dto.TokenResponse": {
      "type": "object",
      "properties": {
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        }
      }
    },
    "dto.UserLogin": {
      "type": "object",
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "maxLength": 64
        },
        "password": {
          "type": "string",
          "maxLength": 64,
          "minLength": 1
        }
      }
    },
    "dto.UserRegister": {
      "type": "object",
      "required": [
        "email",
        "name",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "maxLength": 63
        },
        "name": {
          "type": "string",
          "maxLength": 64,
          "minLength": 1
        },
        "password": {
          "type": "string",
          "maxLength": 64,
          "minLength": 1
        }
      }
    },
    "v1.response": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    }
  }
